check($val, $list, $label)
  $res = null
  $res = $a if $a == $val for $a in $list
  if $res == null
    error('[Error-check] ' + $label + ' ' + $val + ' is invalid, accepted values are: ' + $list)
  return $res

checkVar($name, $label)
  $res = lookup('$' + $name)
  if $res == null
    error('[Error-check] ' + $label + ' ' + $name + ' is an invalid variable')
  return $res